<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    tools:context=".MainActivity02">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:background="@color/grey"
        app:tabIndicatorColor="@color/orange"
        app:tabSelectedTextColor="@color/orange"
        app:tabTextColor="@color/black"
        app:tabGravity="fill">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/primero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/new00"
            android:text="PRIMERO" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/segundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/nube"
            android:text="SEGUNDO" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tercero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/edit00"
            android:text="TERCERO" />
    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>